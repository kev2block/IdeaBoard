{
  "version": 2,
  "name": "idea-board",
  "builds": [
    {
      "src": "frontend/public/*",
      "use": "@vercel/static"
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/public/styles.css"
    }
  ]
}